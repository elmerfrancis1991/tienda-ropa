rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper: Usuario autenticado
    function isAuth() {
      return request.auth != null;
    }
    
    // Helper: Verificar si es admin
    function isAdmin() {
      return isAuth() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper: Es el propio usuario
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Helper: Validar que no se esté modificando el rol
    function notUpdatingRole() {
      return !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
    }

    // Helper: Validar datos de producto
    function isValidProduct() {
      let data = request.resource.data;
      return data.precio >= 0 && data.stock >= 0 && data.nombre.size() > 0;
    }
    
    // Usuarios: 
    // - Lectura: Dueño siempre, o Admin
    // - Creación: Admin, o si es el primer usuario (bootstrap)
    // - Actualización: Dueño (sin tocar rol) o Admin
    // - Borrado: Solo Admin
    match /users/{userId} {
      // Permitir lectura del propio documento siempre (para login)
      allow read: if isOwner(userId) || isAdmin();
      // Permitir crear el propio documento si no existe (bootstrap)
      allow create: if isOwner(userId) || isAdmin();
      allow update: if isAdmin() || (isOwner(userId) && notUpdatingRole());
      allow delete: if isAdmin();
    }
    
    // Productos: 
    // - Lectura: Autenticados
    // - Escritura: Solo Admin, con validación de datos
    match /productos/{productoId} {
      allow read: if isAuth();
      allow write: if isAdmin() && isValidProduct();
    }
    
    // Ventas: 
    // - Lectura: Admin (historial completo)
    // - Creación: Autenticados (Cajeros)
    // - Modificación/Borrado: Solo Admin
    match /ventas/{ventaId} {
      allow read: if isAdmin();
      allow create: if isAuth(); // TODO: Validar estructura de venta si es posible
      allow update, delete: if isAdmin();
    }
    
    // Cierres de caja: 
    // - Lectura: Autenticados
    // - Creación: Autenticados
    match /cierres_caja/{cierreId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update: if isAuth() && resource.data.usuarioId == request.auth.uid;
      allow delete: if isAdmin();
    }
    
    // Configuración: Solo Admin escribe
    match /config/{configId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }
  }
}
